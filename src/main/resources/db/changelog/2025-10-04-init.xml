<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1-create-app_user" author="arsen">
        <createTable tableName="app_user">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password_hash" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="created_by" type="varchar"/>
            <column name="updated_by" type="varchar"/>
        </createTable>
    </changeSet>

    <changeSet id="2-create-app_role" author="arsen">
        <createTable tableName="app_role">
            <column name="code" type="VARCHAR(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="3-create-app_user_role" author="arsen">
        <createTable tableName="app_user_role">
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="role_code" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                tableName="app_user_role"
                columnNames="user_id, role_code"
                constraintName="pk_app_user_role"/>

        <addForeignKeyConstraint
                baseTableName="app_user_role"
                baseColumnNames="user_id"
                referencedTableName="app_user"
                referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_app_user_role_user"/>

        <addForeignKeyConstraint
                baseTableName="app_user_role"
                baseColumnNames="role_code"
                referencedTableName="app_role"
                referencedColumnNames="code"
                constraintName="fk_app_user_role_role"/>
    </changeSet>

    <changeSet id="4-create-refresh_token" author="arsen">
        <createTable tableName="refresh_token">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="jti" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="token_hash" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="issued_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="revoked" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="replaced_by_jty" type="UUID"/>
            <column name="user_agent" type="varchar"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="refresh_token"
                baseColumnNames="user_id"
                referencedTableName="app_user"
                referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_refresh_token_user"/>
    </changeSet>

    <!-- Таблица clients -->
    <changeSet id="1-create-clients" author="arsen">
        <createTable tableName="clients">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(100)"/>
            <column name="phone" type="VARCHAR(20)">
                <constraints unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="created_by" type="varchar"/>
            <column name="updated_by" type="varchar"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="clients"
                baseColumnNames="user_id"
                referencedTableName="app_user"
                referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_clients_user"/>
    </changeSet>

    <!-- Таблица players -->
    <changeSet id="2-create-players" author="arsen">
        <createTable tableName="players">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="birth_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="position" type="VARCHAR(50)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="created_by" type="varchar"/>
            <column name="updated_by" type="varchar"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="players"
                baseColumnNames="client_id"
                referencedTableName="clients"
                referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_players_client"/>
    </changeSet>

    <!-- Таблица branches -->
    <changeSet id="1-create-branches" author="arsen">
        <createTable tableName="branches">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="TEXT"/>
            <column name="active" type="boolean" defaultValue="false"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="created_by" type="varchar"/>
            <column name="updated_by" type="varchar"/>

        </createTable>
    </changeSet>

    <!-- Таблица groups -->
    <changeSet id="2-create-groups" author="arsen">
        <createTable tableName="groups">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="branch_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="created_by" type="varchar"/>
            <column name="updated_by" type="varchar"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="groups"
                baseColumnNames="branch_id"
                referencedTableName="branches"
                referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_groups_branch"/>
    </changeSet>

    <!-- Таблица sections -->
    <changeSet id="3-create-sections" author="arsen">
        <createTable tableName="sections">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="group_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="schedule" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="created_by" type="varchar"/>
            <column name="updated_by" type="varchar"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="sections"
                baseColumnNames="group_id"
                referencedTableName="groups"
                referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_sections_group"/>
    </changeSet>

    <!-- Таблица trials -->
    <changeSet id="1-create-trials" author="arsen">
        <createTable tableName="trials">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="section_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="trial_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="result" type="VARCHAR(50)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="created_by" type="varchar"/>
            <column name="updated_by" type="varchar"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="trials"
                baseColumnNames="player_id"
                referencedTableName="players"
                referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_trials_player"/>

        <addForeignKeyConstraint
                baseTableName="trials"
                baseColumnNames="section_id"
                referencedTableName="sections"
                referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_trials_section"/>
    </changeSet>

    <!-- Таблица contracts -->
    <changeSet id="2-create-contracts" author="arsen">
        <createTable tableName="contracts">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="section_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="DATE"/>
            <column name="amount" type="DECIMAL(10,2)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="created_by" type="varchar"/>
            <column name="updated_by" type="varchar"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="contracts"
                baseColumnNames="player_id"
                referencedTableName="players"
                referencedColumnNames="id"
                constraintName="fk_contracts_player"/>

        <addForeignKeyConstraint
                baseTableName="contracts"
                baseColumnNames="section_id"
                referencedTableName="sections"
                referencedColumnNames="id"
                constraintName="fk_contracts_section"/>
    </changeSet>

    <!-- Таблица attendance -->
    <changeSet id="3-create-attendance" author="arsen">
        <createTable tableName="attendance">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="section_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="attended_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="PRESENT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="attendance"
                baseColumnNames="player_id"
                referencedTableName="players"
                referencedColumnNames="id"
                constraintName="fk_attendance_player"/>

        <addForeignKeyConstraint
                baseTableName="attendance"
                baseColumnNames="section_id"
                referencedTableName="sections"
                referencedColumnNames="id"
                constraintName="fk_attendance_section"/>
    </changeSet>

</databaseChangeLog>