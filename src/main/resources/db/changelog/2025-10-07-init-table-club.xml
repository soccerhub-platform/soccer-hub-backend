<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="init_table_clubs" author="arsen">
        <createTable tableName="clubs">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="slug" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(100)"/>
            <column name="phone" type="VARCHAR(20)"/>
            <column name="website" type="VARCHAR(255)"/>
            <column name="logo_url" type="TEXT"/>
            <column name="address" type="TEXT"/>
            <column name="timezone" type="VARCHAR(50)"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="created_by" type="varchar"/>
            <column name="updated_by" type="varchar"/>
        </createTable>
    </changeSet>

    <changeSet id="branches_add_column_club_id" author="arsen">
        <addColumn tableName="branches">
            <column name="club_id" type="UUID"/>
        </addColumn>

        <addForeignKeyConstraint
                baseTableName="branches"
                baseColumnNames="club_id"
                referencedTableName="clubs"
                referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_branch_club"/>
    </changeSet>
</databaseChangeLog>