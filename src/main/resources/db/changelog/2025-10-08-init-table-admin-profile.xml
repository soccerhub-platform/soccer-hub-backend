<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="init-admin-profiles" author="arsen">
            <createTable tableName="admin_profiles">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(100)"/>
            <column name="phone" type="VARCHAR(20)">
                <constraints unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="created_by" type="varchar"/>
            <column name="updated_by" type="varchar"/>
        </createTable>
    </changeSet>

    <changeSet id="admin_profiles_add_column_branch_id" author="arsen">
        <addColumn tableName="admin_profiles">
            <column name="branch_id" type="UUID"/>
        </addColumn>

        <addForeignKeyConstraint
                baseTableName="admin_profiles"
                baseColumnNames="branch_id"
                referencedTableName="branches"
                referencedColumnNames="id"
                constraintName="fk_admin_profiles_branch"/>
    </changeSet>
</databaseChangeLog>